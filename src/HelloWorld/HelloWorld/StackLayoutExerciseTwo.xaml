<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="HelloWorld.StackLayoutExerciseTwo">
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness"
                    iOS="0, 50, 0, 0">

        </OnPlatform>
    </ContentPage.Padding>
    <StackLayout Spacing="15">
        <Label Text="RedOne Photography"
               Margin="10, 0, 10, 0">

        </Label>
        <Image Source="http://lorempixel.com/1920/1080/nature/3/">

        </Image>
        <StackLayout Orientation="Horizontal"
                     Padding="10, 0"
                     Spacing="20">
            <Button Text="Like">

            </Button>
            <Button Text="Comment">

            </Button>
            <Button Text="Share">

            </Button>
        </StackLayout>
        <BoxView Color="#f0f0f0"
                 HeightRequest="1"
                 Margin="10, 0, 10, 0">

        </BoxView>
        <Label Margin="10, 0, 10, 0"
               FontAttributes="Bold">
            700 likes
        </Label>
        <Label TextColor="Gray"
               Margin="10, 0, 10, 0">
            This is a shot yesterday in Skanor, Sweden, when driving home, from a couple of days work in Denmark.
        </Label>
    </StackLayout>
</ContentPage>
